<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    </head>
    <body>
        <h1>kdt11기 게시판</h1>
        <a href="/write">글쓰기</a>
        <a href="/profile">내정보조회</a>
        <button type="button" onclick="logout()"></button> // 로컬 스토리지 토큰 값 삭제
        <table border="1" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>제목</th>
                    <th>날짜</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <script>
            const tbody = document.querySelector('tbody');
            (async function () {
                // 오류처리 코드 추가
                
                const res = await axios({
                    method: 'GET',
                    url: '/api/post/all',
                    Headers: {
                        Authorization: `Bearer ${localStorage.getItem('token')}`,
                    },
                });
                console.log(res);
                for (let i = 0; i < res.data.data.length; i++) {
                    const html = `
                        <tr>
                            <td>${res.data.data[i].id}</td>
                            <td><a href="/post/${res.data.data[i].id}">${res.data.data[i].title}</a></td>
                            <td>${res.data.data[i].createdAt}</td>
                        </tr>
                    `;
                    tbody.insertAdjacentHTML('beforeend', html);
                }
            })();

            function logout() {
                localStorage.clear();
                document.location.href = '/login'; // 로그인 페이지로 이동
            }
        </script>
    </body>
</html>
